{
  "compilerOptions": {
    // modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    // build
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "target": "ES2022",
    "allowJs": true,
    // compilation
    "jsx": "react-jsx",
    "noEmit": true,
    "downlevelIteration": true,
    // type-checking
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "bun-types",
      "@remix-run/dev",
      "@remix-run/node",
      "@remix-run/express"
    ]
  },
  "include": [
    "./src",
    "./app",
  ],
  "files": [
    "./build/index.js"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ]
}