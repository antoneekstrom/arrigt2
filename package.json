{
  "name": "arrigt2",
  "module": "src/index.ts",
  "scripts": {
    "build:remix": "remix build",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --outfile=build/bundle.cjs",
    "dev": "cross-env NODE_ENV=development remix dev --manual -c \"tsx watch src/index.ts\"",
    "start": "node build/bundle.cjs",
    "migrate:dev": "prisma migrate dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:mutation": "stryker run",
    "lint": "eslint ./src/**",
    "lint:fix": "eslint ./src/** --fix",
    "format": "prettier ./src/** --check",
    "format:fix": "prettier ./src/** --write"
  },
  "dependencies": {
    "@pothos/core": "3.38.0",
    "@prisma/client": "5.6.0",
    "@remix-run/express": "2.3.1",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "@sinclair/typebox": "0.31.28",
    "express": "4.18.2",
    "graphql": "16.8.1",
    "graphql-ws": "5.14.2",
    "graphql-yoga": "5.0.0",
    "isbot": "3.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "@graphql-tools/executor-http": "1.0.3",
    "@remix-run/dev": "2.3.1",
    "@stryker-mutator/core": "7.3.0",
    "@stryker-mutator/typescript-checker": "7.3.0",
    "@stryker-mutator/vitest-runner": "7.3.0",
    "@types/express": "4.17.21",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "@vitest/coverage-v8": "0.34.6",
    "bun-types": "latest",
    "cross-env": "7.0.3",
    "esbuild": "0.19.7",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "graphql-config": "5.0.3",
    "prettier": "3.1.0",
    "prisma": "5.6.0",
    "tsx": "4.5.0",
    "typescript": "5.3.2",
    "vitest": "0.34.6"
  },
  "type": "module"
}
