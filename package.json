{
  "name": "arrigt2",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "dev": "cross-env NODE_ENV=development node --loader tsm src/index.ts",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc",
    "test:unit": "vitest --config vite.config.unit.ts --coverage",
    "test:integration": "vitest --config vite.config.integration.ts --coverage",
    "test:mutation": "stryker run",
    "build": "remix vite:build",
    "start": "cross-env NODE_ENV=production node --loader tsm src/index.ts"
  },
  "engines": {
    "node": "21.2.0"
  },
  "dependencies": {
    "@conform-to/react": "1.0.4",
    "@conform-to/zod": "1.0.4",
    "@prisma/client": "^5.11.0",
    "@remix-run/express": "2.3.1",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "cross-env": "^7.0.3",
    "express": "4.18.2",
    "isbot": "5.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsm": "^2.3.0",
    "zod": "3.22.4",
    "zod-validation-error": "2.1.0"
  },
  "devDependencies": {
    "@remix-run/dev": "2.8.1",
    "@stryker-mutator/core": "^8.2.6",
    "@stryker-mutator/typescript-checker": "^8.2.6",
    "@stryker-mutator/vitest-runner": "^8.2.6",
    "@types/express": "4.17.21",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "@vitest/coverage-v8": "1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "typescript": "^5.4.2",
    "vite": "5.1.5",
    "vitest": "1.3.1"
  }
}
