{
  "name": "arrigt2",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "build:remix": "remix build",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --outfile=build/bundle.cjs",
    "dev": "cross-env NODE_ENV=development remix dev --manual -c \"tsx watch src/index.ts\"",
    "start": "node build/bundle.cjs",
    "migrate:dev": "prisma migrate dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:mutation": "stryker run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "codegen": "graphql-codegen"
  },
